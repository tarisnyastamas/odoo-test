<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="book.list">
      <field name="name">book list</field>
      <field name="model">book.book</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="author"/>
          <field name="no_of_pages"/>
          <field name="genre"/>
        </list>
      </field>
    </record>



    <record model="ir.actions.act_window" id="book.action_window">
      <field name="name">book window</field>
      <field name="res_model">book.book</field>
      <field name="view_mode">list,form</field>
    </record>


    <record model="ir.actions.server" id="book.action_server">
      <field name="name">book server</field>
      <field name="model_id" ref="model_book_book"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <menuitem name="book" id="book.menu_root"/>

    <menuitem name="All books" id="book.menu_1" parent="book.menu_root"/>

    <menuitem name="List" id="book.menu_1_list" parent="book.menu_1"
              action="book.action_window"/>

  </data>
</odoo>
